@model dynamic
    @{
        ViewData["Title"] = "All Customers";
    }
<style>
    #myInput {
        background-position: 10px 10px;
        background-repeat: no-repeat;
        width: 100%;
        font-size: 16px;
        padding: 12px 20px 12px 40px;
        border: 1px solid #ddd;
        margin-bottom: 12px;
    }
</style>

<h2>All Customers</h2>

<p>
    <a asp-action="AddR">Add User</a>
</p>
<table class="table table-bordered" id="myTable">
    <thead>
        <tr style="background-color:skyblue">
            <th>First Name</th>
            <th>Last Name</th>
            <th>Mobile</th>
            <th>Email</th>
            <th>Locations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customers in Model)
        {
        <tr class="prod">
            <td scope="row">@customers.F_Name</td>
            <td>@customers.L_Name</td>
            <td>@customers.Mobile</td>
            <td>@customers.Email</td>
            <td>@customers.Locations</td>
            <td>@Html.ActionLink("Details", "GetCustomerById", new { id = customers.Id })</td>
            <td>@Html.ActionLink("Edit", "Update", new { id = customers.Id })</td>
            <td>@Html.ActionLink("Delete", "DeleteCustomerById", new { id = customers.Id })</td>
        </tr>
        }
    </tbody>
</table>
